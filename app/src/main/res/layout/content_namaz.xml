            ripple:rv_type="rectangle"
            ripple:rv_zoom="true">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="#2196F3"
                android:scaleType="fitCenter"
                android:src="@drawable/s1"
